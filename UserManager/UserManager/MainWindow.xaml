<Window x:Name="UserManager" x:Class="UserManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserManager"
        mc:Ignorable="d"
        Title="UserManager" Height="400" Width="600" ResizeMode="CanMinimize">
    <Grid>
        <ListBox x:Name="UserListbox" HorizontalAlignment="Left" Height="252" Margin="10,36,0,0" VerticalAlignment="Top" Width="138"/>
        <Label x:Name="UserLabel" Content="Users" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="138" FontWeight="Bold" FontSize="14"/>
        <ListBox x:Name="AdminListbox" HorizontalAlignment="Left" Height="252" Margin="170,36,0,0" VerticalAlignment="Top" Width="138"/>
        <Label x:Name="AdminLabel" Content="Administrators" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="138" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="UserInfoLabel" Content="UserInfo" HorizontalAlignment="Left" Margin="337,36,0,0" VerticalAlignment="Top" Height="94" Width="130"/>
        <Button x:Name="ElevateUser" Content="Elevate" HorizontalAlignment="Left" Margin="10,293,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="DemoteAdmin" Content="Demote" HorizontalAlignment="Left" Margin="170,293,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
