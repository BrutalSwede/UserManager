<Window x:Name="UserManager" x:Class="UserManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserManager"
        mc:Ignorable="d"
        Title="UserManager" Height="404.0" Width="601.0" ResizeMode="CanMinimize">
    <Grid x:Name="Main_Grid" Margin="0,0,-5.887,0.226">
        <Grid x:Name="Grid1" HorizontalAlignment="Left" Height="352" Margin="9,10,0,0" VerticalAlignment="Top" Width="580">
            <TextBox x:Name="User_Email" HorizontalAlignment="Left" Height="18" Margin="376,334,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.51,0.502" Text="E-mail" TextChanged="User_Email_TextChanged"/>
            <TextBox x:Name="User_Name" HorizontalAlignment="Left" Height="18" Margin="376,311,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" TextChanged="User_Name_TextChanged"/>
        </Grid>
        <ListBox x:Name="UserListbox" HorizontalAlignment="Left" Height="252" Margin="10,36,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="UserListbox_SelectionChanged"/>
        <Label x:Name="UserLabel" Content="Users" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="138" FontWeight="Bold" FontSize="14"/>
        <ListBox x:Name="AdminListbox" HorizontalAlignment="Left" Height="252" Margin="190,36,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="AdminListbox_SelectionChanged"/>
        <Label x:Name="AdminLabel" Content="Administrators" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top" Width="138" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="UserInfoLabel" Content="UserInfo" HorizontalAlignment="Left" Margin="369,36,0,0" VerticalAlignment="Top" Height="94" Width="130"/>
        <Button x:Name="ElevateUser" Content="Elevate" HorizontalAlignment="Left" Margin="10,293,0,0" VerticalAlignment="Top" Width="75" Click="ElevateUser_Click"/>
        <Button x:Name="DemoteAdmin" Content="Demote" HorizontalAlignment="Left" Margin="190,293,0,0" VerticalAlignment="Top" Width="75" Click="DemoteAdmin_Click"/>
        <Button x:Name="Remove_User" Content="Remove" HorizontalAlignment="Left" Margin="95,293,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Add_User" Content="Add User" HorizontalAlignment="Left" Margin="509,344,0,0" VerticalAlignment="Top" Width="75" Click="Add_User_Click"/>
    </Grid>
</Window>
